<?xml version='1.0'?>

<robot name="panos_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find panos_bot)/urdf/panos_bot.gazebo" />
  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder radius="0.25" length="0.1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.25" length="0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision name='back_caster_collision'>
      <origin xyz="-0.18 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.18 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.18 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.18 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="chassis">
    <material>Gazebo/Green</material>
  </gazebo>

  <!-- sensor base -->
  <link name='sensor_base'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.125" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='sensor_base_collision'>
      <origin xyz="0 0 0.125" rpy=" 0 0 0"/>
      <geometry>
        <box size=".15 .15 .25"/>
      </geometry>
    </collision>

    <visual name='sensor_base_visual'>
      <origin xyz="0 0 0.125" rpy=" 0 0 0"/>
      <geometry>
        <box size=".15 .15 .25"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="sensor_base_joint">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <child link="sensor_base"/>
    <parent link="chassis"/>
  </joint>




  <!-- Left Wheel Link -->
  
  <link name="left_wheel">

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
    </collision>
  </link>

  <gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>

  <!-- Right Wheel Link -->

  <link name="right_wheel">

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
    </collision>
  </link>


  <gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>
  <!-- Camera Link -->

  <link name="camera">

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <gazebo reference="camera">
    <material>Gazebo/Yellow</material>
  </gazebo>
  <!-- Hokuyo Link -->

  <link name="hokuyo">

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
    <visual>
      <geometry>
        <mesh filename="package://udacity_bot/meshes/hokuyo.dae"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <gazebo reference="hokuyo">
    <material>Gazebo/Red</material>
  </gazebo>
  <!-- Joints -->

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.27 -0.05" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.27 -0.05" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <joint type="fixed" name="camera_joint">
    <origin xyz="0.075 0 0.2" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="sensor_base"/>
  </joint>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0 0 0.275" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="sensor_base"/>
  </joint>

</robot>
